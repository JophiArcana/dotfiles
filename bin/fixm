#!/bin/bash
locat="right-of"
screen="DP-2"
scale="1.8x1.8"
resolution="1920x1080"

while [[ $# -gt 0 ]]
do
    key="$1"
    case $key in
        -loc|--location)
            locat="$2"
            shift # past argument
            shift # past value
            ;;
        -scr|--screen|-out|--output)
            screen="$2"
            shift # past argument
            shift # past value
            ;;
        -sca|--scale)
            scale="$2"
            shift # past argument
            shift # past value
            ;;
        -res|--resolution|-mod|--mode)
            resolution="$2"
            shift # past argument
            shift # past value
            ;;
    esac
done

xrandr --output $screen --mode $resolution --scale $scale --$locat eDP-1
xrandr --auto
